{
  "name": "pfl-care-arrangement-plan",
  "version": "0.0.1",
  "description": "PFL Care Arrangement Plan",
  "repository": "git@ssh.dev.azure.com:v3/ACE-C514/pfl-care-arrangement-plan/pfl-care-arrangement-plan",
  "license": "MIT",
  "scripts": {
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "prettier": "prettier . --cache --check",
    "prettier-fix": "prettier . --cache --write",
    "typecheck": "tsc && tsc -p integration-tests",
    "test": "DOTENV_CONFIG_PATH='.env.test' jest",
    "test:ci": "DOTENV_CONFIG_PATH='.env.test' jest --runInBand --coverage",
    "int-test": "cypress run --config video=false",
    "int-test:ci": "npm run build && start-server-and-test start http://localhost:8001/health int-test",
    "int-test-ui": "cypress open --e2e --browser chrome"
  },
  "engines": {
    "node": "^22",
    "npm": "^11.0.0"
  },
  "dependencies": {
    "bunyan": "1.8.15",
    "bunyan-format": "0.2.1",
    "compression": "1.7.5",
    "connect-redis": "8.0.1",
    "csrf-sync": "4.0.3",
    "express": "4.21.2",
    "express-session": "1.18.1",
    "govuk-frontend": "5.8.0",
    "helmet": "8.0.0",
    "http-errors": "2.0.0",
    "i18n": "0.15.1",
    "nocache": "4.0.0",
    "nunjucks": "3.2.4",
    "redis": "4.7.0"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "0.0.1-beta.2",
    "@tsconfig/node22": "22.0.0",
    "@types/bunyan": "1.8.11",
    "@types/bunyan-format": "0.2.9",
    "@types/compression": "1.7.5",
    "@types/express-session": "1.18.1",
    "@types/http-errors": "2.0.4",
    "@types/i18n": "0.13.12",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.7",
    "@types/nunjucks": "3.2.6",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.21.0",
    "@typescript-eslint/parser": "8.21.0",
    "chokidar": "3.6.0",
    "concurrently": "9.1.2",
    "cypress": "14.0.0",
    "cypress-multi-reporters": "2.0.4",
    "dotenv": "16.4.7",
    "esbuild": "0.24.2",
    "esbuild-plugin-clean": "1.0.1",
    "esbuild-plugin-copy": "2.1.1",
    "esbuild-plugin-manifest": "1.0.5",
    "esbuild-sass-plugin": "3.3.1",
    "glob": "11.0.1",
    "jest": "29.7.0",
    "jest-html-reporter": "3.10.2",
    "jest-junit": "16.0.0",
    "mocha-junit-reporter": "2.2.1",
    "nock": "13.5.6",
    "prettier": "3.4.2",
    "prettier-plugin-jinja-template": "2.0.0",
    "start-server-and-test": "2.0.10",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "typescript": "5.7.3"
  }
}
