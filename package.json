{
  "name": "pfl-care-arrangement-plan",
  "version": "0.0.1",
  "description": "PFL Care Arrangement Plan",
  "repository": "git@ssh.dev.azure.com:v3/ACE-C514/pfl-care-arrangement-plan/pfl-care-arrangement-plan",
  "license": "MIT",
  "scripts": {
    "build": "node esbuild/esbuild.config.mjs --build",
    "start": "node $ENV_FILE_OPTION $NODE_OPTIONS dist/app.js | bunyan -o short",
    "start:dev": "ENV_FILE_OPTION='--env-file=.env' nodemon --exec 'run-s build start'",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --cache --max-warnings 0 --fix",
    "prettier": "prettier . --cache --check",
    "prettier:fix": "prettier . --cache --write",
    "typecheck": "tsc && tsc -p integration-tests",
    "test": "DOTENV_CONFIG_PATH='.env.test' jest",
    "test:update-pdf-snapshots": "DOTENV_CONFIG_PATH='.env.test' UPDATE_PDF_SNAPSHOTS=true jest server/pdf",
    "test:ci": "DOTENV_CONFIG_PATH='.env.test' jest --runInBand --coverage",
    "int-test": "cypress run --config video=false",
    "int-test:ci": "dotenv -e .env.test -- sh -c 'npm run build && start-server-and-test start http://localhost:8001/health int-test'",
    "int-test-ui": "cypress open --e2e --browser chrome"
  },
  "engines": {
    "node": "^22",
    "npm": "^11.0.0"
  },
  "dependencies": {
    "bunyan": "1.8.15",
    "bunyan-format": "0.2.1",
    "compression": "1.8.0",
    "connect-flash": "0.1.1",
    "connect-redis": "8.0.2",
    "cookie-parser": "1.4.7",
    "csrf-sync": "4.1.0",
    "express": "4.21.2",
    "express-session": "1.18.1",
    "express-validator": "7.2.1",
    "govuk-frontend": "5.9.0",
    "helmet": "8.1.0",
    "http-errors": "2.0.0",
    "i18n": "0.15.1",
    "jspdf": "3.0.1",
    "nocache": "4.0.0",
    "nunjucks": "3.2.4",
    "redis": "4.7.0"
  },
  "devDependencies": {
    "@eslint/js": "9.26.0",
    "@jgoz/esbuild-plugin-typecheck": "4.0.3",
    "@testing-library/jest-dom": "6.6.3",
    "@tsconfig/node22": "22.0.1",
    "@types/bunyan": "1.8.11",
    "@types/bunyan-format": "0.2.9",
    "@types/compression": "1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-parser": "1.4.8",
    "@types/express-session": "1.18.1",
    "@types/http-errors": "2.0.4",
    "@types/i18n": "0.13.12",
    "@types/jest": "29.5.14",
    "@types/jsdom": "21.1.7",
    "@types/node": "22.15.15",
    "@types/nunjucks": "3.2.6",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.32.0",
    "@typescript-eslint/parser": "8.32.0",
    "cypress": "14.3.3",
    "cypress-multi-reporters": "2.0.5",
    "dotenv": "16.5.0",
    "dotenv-cli": "8.0.0",
    "esbuild": "0.25.4",
    "esbuild-plugin-clean": "1.0.1",
    "esbuild-plugin-copy": "2.1.1",
    "esbuild-plugin-manifest": "1.0.5",
    "esbuild-sass-plugin": "3.3.1",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.3",
    "eslint-import-resolver-typescript": "4.3.4",
    "eslint-plugin-cypress": "4.3.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-jest-dom": "5.5.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "glob": "11.0.2",
    "globals": "16.1.0",
    "jest": "29.7.0",
    "jest-html-reporter": "4.1.0",
    "jest-junit": "16.0.0",
    "jsdom": "26.1.0",
    "mocha-junit-reporter": "2.2.1",
    "nodemon": "3.1.10",
    "npm-run-all": "4.1.5",
    "prettier": "3.5.3",
    "prettier-plugin-jinja-template": "2.1.0",
    "start-server-and-test": "2.0.11",
    "supertest": "7.1.0",
    "ts-jest": "29.3.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.0"
  }
}
