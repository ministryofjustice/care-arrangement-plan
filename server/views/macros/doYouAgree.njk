{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% macro doYouAgree(text, questionText=__('sharePlan.yourProposedPlan.doYouAgree')) %}
  <p class="govuk-body govuk-!-margin-bottom-2">{{ questionText }}</p>

  <div class="govuk-form-group">
    {% call govukFieldset({}) %}
      <div class="agreement-input__item">
        {{
          govukInput({
            name: "answer-yes",
            classes: "govuk-input--width-2",
            label: {
              text: __('yes')
            }
          })
        }}
      </div>
      <div class="agreement-input__item">
        {{
          govukInput({
            name: "answer-no",
            classes: "govuk-input--width-2",
            label: {
              text: __('no')
            }
          })
        }}
      </div>
    {% endcall %}
  </div>

  {% if text %}
    {{
      govukTextarea({
        label: {
          text: text
        }
      })
    }}
  {% endif %}
{% endmacro %}
