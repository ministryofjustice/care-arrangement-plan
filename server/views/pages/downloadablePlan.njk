  <style>
    /* GOV.UK Transport font fallback stack */
    body {
      font-family: "GDS Transport", Arial, sans-serif;
      font-size: 19px;
      line-height: 1.5;
      color: #0b0c0c;
      background-color: #ffffff;
      margin: 0;
      padding: 20px;
    }

    .container {
      max-width: 960px;
      margin: 0 auto;
      padding: 0 15px;
    }

    /* Header */
    .header {
      background-color: #0b0c0c;
      color: #ffffff;
      padding: 20px 0;
      margin: -20px -20px 30px -20px;
    }

    .header-content {
      max-width: 960px;
      margin: 0 auto;
      padding: 0 15px;
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .crest {
      width: 36px;
      height: 32px;
      background-image: url('data:image/svg+xml;base64,');
      background-size: contain;
      background-repeat: no-repeat;
    }

    .header h1 {
      font-size: 24px;
      font-weight: 700;
      margin: 0;
      color: #ffffff;
    }

    /* Typography */
    h1, h2, h3, h4 {
      font-weight: 700;
      line-height: 1.2;
      margin-top: 0;
    }

    h1 {
      font-size: 48px;
      margin-bottom: 30px;
    }

    h2 {
      font-size: 36px;
      margin-top: 50px;
      margin-bottom: 20px;
    }

    h3 {
      font-size: 24px;
      margin-top: 30px;
      margin-bottom: 15px;
    }

    h4 {
      font-size: 19px;
      margin-top: 20px;
      margin-bottom: 10px;
    }

    p {
      margin: 0 0 20px 0;
    }

    /* Links */
    a {
      color: #1d70b8;
      text-decoration: underline;
    }

    a:hover {
      color: #003078;
    }

    a:visited {
      color: #4c2c92;
    }

    /* Lists */
    ul, ol {
      margin: 0 0 20px 0;
      padding-left: 20px;
    }

    li {
      margin-bottom: 10px;
    }

    /* Text box component */
    .text-box {
      border: 2px solid #0b0c0c;
      padding: 15px;
      margin: 20px 0;
      background-color: #f3f2f1;
    }

    .text-box h3,
    .text-box h4 {
      margin-top: 0;
    }

    /* Do you agree component */
    .do-you-agree {
      margin: 30px 0;
      padding: 20px;
      background-color: #f3f2f1;
      border-left: 5px solid #1d70b8;
    }

    .do-you-agree p {
      font-size: 19px;
      font-weight: 700;
      margin-bottom: 10px;
    }

    /* Answer sections */
    .answer-section {
      margin: 30px 0;
    }

    .answer-section .question {
      font-weight: 700;
      margin-bottom: 10px;
    }

    .answer-section .answer {
      padding-left: 20px;
      margin-bottom: 20px;
    }

    .answer-section .hint {
      color: #505a5f;
      font-size: 16px;
      margin-bottom: 10px;
    }

    .answer-section .disagreement {
      font-style: italic;
      color: #505a5f;
      margin-top: 10px;
    }

    /* Print styles */
    @media print {
      body {
        padding: 0;
      }

      .header {
        margin: 0 0 30px 0;
      }

      .no-print {
        display: none;
      }

      a {
        color: #1d70b8;
        text-decoration: underline;
      }

      h2 {
        page-break-after: avoid;
      }
    }

    /* Footer */
    .footer {
      margin-top: 50px;
      padding-top: 30px;
      border-top: 1px solid #b1b4b6;
      text-align: center;
      font-size: 16px;
      color: #505a5f;
    }
  </style>
</head>
