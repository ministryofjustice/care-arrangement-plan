{% extends "partials/layout.njk" %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "partials/errorSummary.njk" %}

      {% set hintHtml %}
        <p class="govuk-body">{{ __('otherThings.whatOtherThingsMatter.thingsToAgree') }}</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>{{ __('otherThings.whatOtherThingsMatter.religionDietAndRules') }}</li>
          <li>{{ __('otherThings.whatOtherThingsMatter.extraCurriculars') }}</li>
          <li>{{ __('otherThings.whatOtherThingsMatter.friendsAndFamily') }}</li>
          <li>{{ __('otherThings.whatOtherThingsMatter.otherContact') }}</li>
        </ul>
      {% endset %}

      <form
        class="form"
        action="{{ paths.OTHER_THINGS_WHAT_OTHER_THINGS_MATTER }}"
        method="post"
        novalidate
        id="per-child-form"
      >
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

        <h1 class="govuk-heading-l">{{ title }}</h1>
        <div class="govuk-hint">{{ hintHtml | safe }}</div>

        {# Default/All children answer #}
        <div class="per-child-entry default-answer-section" data-entry-index="0">
          {% if showPerChildOption %}
            <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-2 default-answer-label">For all children:</p>
          {% endif %}
          {{
            govukTextarea({
              label: {
                text: "Describe what other things matter",
                classes: "govuk-visually-hidden",
                isPageHeading: false
              },
              name: formFields.WHAT_OTHER_THINGS_MATTER + "-0",
              id: formFields.WHAT_OTHER_THINGS_MATTER + "-0",
              value: formValues[formFields.WHAT_OTHER_THINGS_MATTER + "-0"],
              errorMessage: errors | findError(formFields.WHAT_OTHER_THINGS_MATTER + "-0")
            })
          }}
        </div>

        {# Container for additional per-child entries #}
        <div id="additional-children-container">
          {# Existing per-child entries will be rendered here by JavaScript on page load #}
        </div>

        {# Button group with proper spacing #}
        <div class="govuk-button-group govuk-!-margin-top-6">
          {% if showPerChildOption %}
            {# Add another child button - gray/secondary style #}
            <button
              type="button"
              class="govuk-button govuk-button--secondary"
              id="add-another-child-btn"
              data-number-of-children="{{ numberOfChildren }}"
              data-child-options="{{ childOptions | dump | escape }}"
              data-names-of-children="{{ namesOfChildren | dump | escape }}"
              data-field-base-name="{{ formFields.WHAT_OTHER_THINGS_MATTER }}"
            >
              Add answer for a specific child
            </button>
          {% endif %}
        </div>

        {{ govukButton({text: __('continue')}) }}
      </form>
      <form
        class="form"
        action="{{ paths.OTHER_THINGS_WHAT_OTHER_THINGS_MATTER_NOT_REQUIRED }}"
        method="post"
        novalidate
      >
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
        <button class="govuk-link link-styled-button">{{ __('doNotNeedToDecideOtherThings') }}</button>
      </form>
    </div>
  </div>

  {% if showPerChildOption %}
    {# Template for per-child entry - hidden, cloned by JavaScript #}
    <template id="per-child-entry-template">
      <div class="per-child-entry govuk-!-margin-top-6 govuk-!-padding-top-6 govuk-!-padding-bottom-2" style="border-top: 2px solid #b1b4b6;">
        <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 20px;">
          <div class="govuk-form-group" style="flex: 1; margin-bottom: 0; margin-right: 20px;">
            <label class="govuk-label govuk-!-font-weight-bold" for="child-selector-ENTRY_INDEX">
              This answer is for:
            </label>
            <select class="govuk-select" id="child-selector-ENTRY_INDEX" name="child-selector-ENTRY_INDEX">
              <option value="">Select a child</option>
              {# Options populated by JavaScript #}
            </select>
          </div>
          <button type="button" class="govuk-button govuk-button--warning remove-child-entry-btn" style="margin-top: 26px;">
            Remove
          </button>
        </div>
        <div class="govuk-form-group">
          <label class="govuk-label govuk-visually-hidden" for="FIELD_NAME">
            Describe what other things matter for this child
          </label>
          <textarea class="govuk-textarea" id="FIELD_NAME" name="FIELD_NAME" rows="5"></textarea>
        </div>
      </div>
    </template>

    <script src="{{ '/assets/js/perChildAnswers.js' | assetMap }}"></script>
  {% endif %}
{% endblock %}
